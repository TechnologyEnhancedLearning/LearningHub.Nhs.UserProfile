
@{
    ViewData["Title"] = "Resend Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var UserVerifiableCredentialId = Context.Request.Query["id"];
}

<div class="nhsuk-width-container app-width-container nhsuk-u-padding-bottom-9">
    <h1 class="nhsuk-heading-xl nhsuk-u-padding-top-3">Resend credential: are you sure?</h1>
    <div>
        <p>
            Before resending this credential to your digital wallet, please remove the existing credential from your wallet to avoid confusion.
        </p>
    </div>
    <dl class="nhsuk-summary-list">
        <div class="nhsuk-summary-list__row">
            <dt class="nhsuk-summary-list__key">
            <form asp-controller="DigitalStaffPassport" asp-action="ConfirmCredential" method="get">
                @Html.Hidden("id", UserVerifiableCredentialId)
                    <button type="submit" class="nhsuk-button nhsuk-u-margin-bottom-0 nhsuk-u-margin-right-3">Confirm</button>
                </form>
            </dt>
            <dd class="nhsuk-summary-list__value">
               <a asp-action="Credentials" class="nhsuk-button nhsuk-button--secondary nhsuk-u-margin-bottom-0 nhsuk-u-padding-right-3">Cancel</a>
            </dd>
        </div>
    </dl>

</div>