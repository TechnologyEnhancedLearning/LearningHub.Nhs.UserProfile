@model IEnumerable<string>

@{
    ViewData["Title"] = "Verify Credential";
}

<div class="nhsuk-width-container app-width-container nhsuk-u-padding-bottom-9">
<h1>Verify Credential</h1>

<h4>Select the credential type</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="VerifyCredential">
            <div class="form-group col-4">
                <label for="credentialType">Credential</label>
                <select id="credentialType" name="credentialType" class="form-control">
                    <option value="Identity">Identity</option>
                    @foreach (var item in Model)
                    {
                        <option value="@item">@item</option>
                    }
                </select>
            </div>           
            <div class="form-group">
                <input type="submit" value="Select" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
